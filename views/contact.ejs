<!DOCTYPE html>
<html>
<head>
	<!-- Standard Meta -->
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<!-- Site Properities -->
	<title><%= title %></title>
	<link rel="stylesheet" type="text/css" href="/libs/semantic/semantic.min.css">
	<link rel="stylesheet" type="text/css" href="/css/styles.css">
	<link rel="stylesheet" type="text/css" href="/css/contact.css">
</head>
<body>
	<!-- Page Contents -->
	<div class="pusher">
		<% include common/nav %>

		<div class="ui vertical inverted stripe segment title">
			<div class="ui middle aligned stackable grid container">
				<div class="row">
					<div class="column">
						<h1><%= header %></h1>
					</div>
				</div>
			</div>
		</div>

		<div class="ui vertical stripe segment">
			<div class="ui stackable grid container">
				<div class="row">
					<div class="six wide column">
						<div class="ui grid container">
							<div class="row">
								<div class="column">
									<table class="ui celled striped table">
										<thead>
											<tr>
												<th>Address</th>
											</tr>
										</thead>
										<tbody>
											<tr>
												<td>
													<% address.forEach(function(line, i) { %>
														<%= line %>

														<% if (i < address.length - 1) { %>
															<br />
														<% } %>
													<% }); %>
												</td>
											</tr>
										</tbody>
									</table>
								</div>
							</div>

							<div class="row">
								<div class="column">
									<table class="ui celled striped table">
										<thead>
											<tr>
												<th colspan="2">Phone Numbers</th>
											</tr>
										</thead>
										<tbody>
											<% phones.forEach(function(phone, i) { %>
												<tr>
													<td>
														<%= phone.type %>
													</td>
													<td>
														<%= phone.number %>
													</td>
												</tr>
											<% }); %>
										</tbody>
									</table>
								</div>
							</div>

							<div class="row">
								<div class="column">
									<table class="ui celled striped table">
										<thead>
											<tr>
												<th>Email</th>
											</tr>
										</thead>
										<tbody>
											<% emails.forEach(function(email, i) { %>
												<tr>
													<td>
														<%= email %>
													</td>
												</tr>
											<% }); %>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
					<div class="ten wide column">
						<div id="map"></div>
					</div>
				</div>
			</div>
		</div>

		<% include common/footer %>
	</div>

	<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDkQEtqiNl5PFuP_G9lMDffQmpSrwaLG-k&sensor=true"></script>
	<script src="/libs/semantic/semantic.min.js"></script>
	<script src="/js/scripts.js"></script>
	<script src="/js/contact.js"></script>

</body>

</html>
