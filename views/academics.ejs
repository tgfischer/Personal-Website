<!DOCTYPE html>
<html>
<head>
	<!-- Standard Meta -->
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<!-- Site Properities -->
	<title><%= title %></title>
	<link rel="stylesheet" type="text/css" href="/libs/semantic/semantic.min.css">
	<link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
    <!-- Google Analytics -->
    <% include common/analytics %>
    
    <!-- Mobile Sidebar -->
    <% include common/sidebar %>

	<!-- Page Contents -->
	<div class="pusher">
		<% include common/nav %>

		<div class="ui vertical inverted stripe segment title">
			<div class="ui middle aligned stackable grid container">
				<div class="row">
					<div class="column">
						<h1><%= header %></h1>
					</div>
				</div>
			</div>
		</div>

		<div class="ui vertical stripe segment">
			<div class="ui middle aligned stackable grid container">
				<div class="center aligned row">
					<div class="column">
						<h1 class="ui header">Notable Academic Projects</h1>
						<div class="ui horizontal divider"><i class="university icon"></i></div>
					</div>
				</div>
				<div class="row">
					<div class="column">
						<div class="ui segments">
							<% projects.forEach(function(project, i) { %>
								<div class="ui segment">
									<h2><%= project.title %></h2>

									<% project.paragraphs.forEach(function(paragraph, i) { %>
										<p class="large-font"><%- paragraph %></p>
									<% }); %>
								</div>
							<% }); %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="ui vertical inverted stripe segment">
			<div class="ui center aligned stackable grid container">
				<div class="row">
					<div class="column">
						<h1 class="ui inverted header">Final Grades</h1>
						<div class="ui inverted horizontal divider"><i class="student icon"></i></div>
					</div>
				</div>
				<div class="two column row">
					<div class="column">
						<h2 class="ui inverted header">First Year</h2>
						<% transcript[0].courses.forEach(function(course, i) { %>
							<div class="ui inverted progress">
								<div class="bar" style="width:<%= course.average %>%">
									<div class="progress"><%= course.average %></div>
								</div>
								<div class="label"><%= course.code %> - <%= course.name %></div>
							</div>
						<% }); %>
					</div>
					<div class="column">
						<h2 class="ui inverted header">Second Year</h2>
						<% transcript[1].courses.forEach(function(course, i) { %>
							<div class="ui inverted progress">
								<div class="bar" style="width:<%= course.average %>%">
									<div class="progress"><%= course.average %></div>
								</div>
								<div class="label"><%= course.code %> - <%= course.name %></div>
							</div>
						<% }); %>
					</div>
				</div>
				<div class="two column row">
					<div class="column">
						<div class="ui inverted progress success">
							<div class="bar" style="width:<%= transcript[0].totalWeightedAverage %>%">
								<div class="progress"><%= transcript[0].totalWeightedAverage %></div>
							</div>
							<div class="label">Total Weighted Average</div>
						</div>
					</div>
					<div class="column">
						<div class="ui inverted progress success">
							<div class="bar" style="width:<%= transcript[1].totalWeightedAverage %>%">
								<div class="progress"><%= transcript[1].totalWeightedAverage %></div>
							</div>
							<div class="label">Total Weighted Average</div>
						</div>
					</div>
				</div>
				<div class="two column row">
					<div class="column">
						<h2 class="ui inverted header">Third Year</h2>
						<% transcript[2].courses.forEach(function(course, i) { %>
							<div class="ui inverted progress">
								<div class="bar" style="width:<%= course.average %>%">
									<div class="progress"><%= course.average %></div>
								</div>
								<div class="label"><%= course.code %> - <%= course.name %></div>
							</div>
						<% }); %>
					</div>
					<div class="column">
						<h2 class="ui inverted header">Fourth Year</h2>
						<p class="large-font"><i>Begins Fall 2016</i></p>
					</div>
				</div>
				<div class="two column row">
					<div class="column">
						<div class="ui inverted progress success">
							<div class="bar" style="width:<%= transcript[2].totalWeightedAverage %>%">
								<div class="progress"><%= transcript[2].totalWeightedAverage %></div>
							</div>
							<div class="label">Total Weighted Average</div>
						</div>
					</div>
					<div class="column">
					</div>
				</div>
			</div>
		</div>

		<% include common/footer %>
	</div>

	<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
	<script src="/libs/semantic/semantic.min.js"></script>
	<script src="/js/scripts.js"></script>

</body>

</html>